<phpunit
         colors="true"
         bootstrap="vendor/autoload.php"
>
    <testsuites>
        <testsuite name="Duplication Kata">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>
    
    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-clover" target="test-reports/php-clover.xml"/>
        <log type="coverage-html" target="test-reports/html"/>
        <log type="junit" target="test-reports/phpunit-report.xml"/>
    </logging>
</phpunit>
